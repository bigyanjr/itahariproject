@{
    ViewData["Title"] = "Dashboard";
    var totalEntries = ViewBag.TotalEntries as int? ?? 0;
    var entriesLast30Days = ViewBag.EntriesLast30Days as int? ?? 0;
    var entriesLast7Days = ViewBag.EntriesLast7Days as int? ?? 0;
    var streak = ViewBag.Streak as int? ?? 0;
    var moodCounts = ViewBag.MoodCounts as dynamic;
    var averageIntensity = ViewBag.AverageIntensity as double? ?? 0;
    var recentEntries = ViewBag.RecentEntries as List<UsersApp.Models.JournalEntry> ?? new List<UsersApp.Models.JournalEntry>();
    var moodTrend = ViewBag.MoodTrend as dynamic;
    var currentMonth = DateTime.Now;
    var firstDay = new DateTime(currentMonth.Year, currentMonth.Month, 1);
    var lastDay = firstDay.AddMonths(1).AddDays(-1);
    var startDate = firstDay.AddDays(-(int)firstDay.DayOfWeek);
    var endDate = startDate.AddDays(41);
    var entryDates = ViewBag.CalendarEntryDates as List<DateTime> ?? new List<DateTime>();
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="modern-dashboard">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Activity Dashboard</h1>
        <div class="dashboard-actions">
            <a href="@Url.Action("Create", "Journal")" class="btn-action">
                <i class="fas fa-plus"></i> New Entry
            </a>
            <a href="@Url.Action("Create", "Mood")" class="btn-action">
                <i class="fas fa-heart"></i> Track Mood
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">Total Entries</span>
                <i class="fas fa-file-alt stat-icon"></i>
            </div>
            <div class="stat-value" data-target="@totalEntries">0</div>
            <div class="stat-footer">
                <span class="stat-change positive">+@entriesLast7Days this week</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">Current Streak</span>
                <i class="fas fa-fire stat-icon"></i>
            </div>
            <div class="stat-value" data-target="@streak">0</div>
            <div class="stat-footer">
                <span class="stat-change">@streak days in a row</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">This Month</span>
                <i class="fas fa-calendar-alt stat-icon"></i>
            </div>
            <div class="stat-value" data-target="@entriesLast30Days">0</div>
            <div class="stat-footer">
                <span class="stat-change positive">@entriesLast30Days entries</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">Mood Average</span>
                <i class="fas fa-smile stat-icon"></i>
            </div>
            <div class="stat-value" data-target="@averageIntensity">0</div>
            <div class="stat-footer">
                <span class="stat-change">Out of 10</span>
            </div>
        </div>
    </div>

    <!-- Dashboard Content -->
    <div class="dashboard-content">
        <!-- Calendar Widget -->
        <div class="dashboard-widget calendar-widget">
            <div class="widget-header">
                <h3 class="widget-title">
                    <i class="fas fa-calendar"></i> Activity Calendar
                </h3>
                <span class="widget-subtitle">@currentMonth.ToString("MMMM yyyy")</span>
            </div>
            <div class="calendar-container">
                <div class="calendar-weekdays">
                    <div class="weekday">Sun</div>
                    <div class="weekday">Mon</div>
                    <div class="weekday">Tue</div>
                    <div class="weekday">Wed</div>
                    <div class="weekday">Thu</div>
                    <div class="weekday">Fri</div>
                    <div class="weekday">Sat</div>
                </div>
                <div class="calendar-days">
                    @for (var d = startDate; d <= endDate; d = d.AddDays(1))
                    {
                        var isCurrentMonth = d.Month == currentMonth.Month;
                        var isToday = d.Date == DateTime.Today;
                        var hasEntry = entryDates.Contains(d.Date);
                        var dayClass = "calendar-day";
                        if (!isCurrentMonth) dayClass += " other-month";
                        if (isToday) dayClass += " today";
                        if (hasEntry) dayClass += " has-entry";
                        
                        <div class="@dayClass" data-date="@d.ToString("yyyy-MM-dd")">
                            <span class="day-number">@d.Day</span>
                            @if (hasEntry)
                            {
                                <span class="entry-indicator"></span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Activity Widget -->
        <div class="dashboard-widget activity-widget">
            <div class="widget-header">
                <h3 class="widget-title">
                    <i class="fas fa-clock"></i> Recent Activity
                </h3>
                <a href="@Url.Action("List", "Journal")" class="widget-link">View All</a>
            </div>
            <div class="activity-table">
                <table class="billing-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (recentEntries.Any())
                        {
                            @foreach (var entry in recentEntries)
                            {
                                <tr>
                                    <td class="date-cell">
                                        <div class="date-primary">@entry.EntryDate.ToString("MMM dd")</div>
                                        <div class="date-secondary">@entry.EntryDate.ToString("yyyy")</div>
                                    </td>
                                    <td class="title-cell">
                                        <div class="title-text">@(string.IsNullOrEmpty(entry.Title) ? "Untitled Entry" : entry.Title)</div>
                                        <div class="title-preview">@(entry.Content.Length > 50 ? entry.Content.Substring(0, 50) + "..." : entry.Content)</div>
                                    </td>
                                    <td>
                                        <span class="badge-type journal">Journal</span>
                                    </td>
                                    <td>
                                        @if (entry.IsProtected)
                                        {
                                            <span class="badge-status locked"><i class="fas fa-lock"></i> Protected</span>
                                        }
                                        else
                                        {
                                            <span class="badge-status active"><i class="fas fa-check"></i> Active</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ViewEntry", "Journal", new { id = entry.Id })" class="table-action">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="empty-state">
                                    <i class="fas fa-inbox"></i>
                                    <p>No entries yet. <a href="@Url.Action("Create", "Journal")">Create your first entry!</a></p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mood Tracker Widget -->
        <div class="dashboard-widget mood-widget">
            <div class="widget-header">
                <h3 class="widget-title">
                    <i class="fas fa-chart-pie"></i> Mood Distribution
                </h3>
                <span class="widget-subtitle">Last 30 Days</span>
            </div>
            <div class="mood-tracker-content">
                @if (moodCounts != null && moodCounts.Count > 0)
                {
                    <div class="mood-chart">
                        @foreach (var mood in moodCounts)
                        {
                            var percentage = entriesLast30Days > 0 ? (mood.Count * 100.0 / entriesLast30Days) : 0;
                            var moodColor = mood.Mood == "Awesome" ? "#ffd700" : 
                                           mood.Mood == "Good" ? "#90ee90" : 
                                           mood.Mood == "Bad" ? "#ffb6c1" : "#ff6347";
                            
                            <div class="mood-bar-item">
                                <div class="mood-bar-header">
                                    <span class="mood-name">@mood.Mood</span>
                                    <span class="mood-percentage">@Math.Round(percentage, 1)%</span>
                                </div>
                                <div class="mood-bar-track">
                                    <div class="mood-bar-fill" style="width: @percentage%; background-color: @moodColor;"></div>
                                </div>
                                <div class="mood-bar-footer">
                                    <span class="mood-count">@mood.Count entries</span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="mood-summary">
                        <div class="summary-item">
                            <span class="summary-label">Average Intensity</span>
                            <span class="summary-value">@averageIntensity / 10</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-heart"></i>
                        <p>No mood data available. <a href="@Url.Action("Index", "Mood")">Start tracking!</a></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
