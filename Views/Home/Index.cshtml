@{
    ViewData["Title"] = "Journal App - Your Personal Journal & Mood Tracking Companion";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="landing-body">
    <!-- Hero Section - YouTube Style -->
    <section class="youtube-hero-section">
        <div class="container">
            <div class="youtube-hero-content">
                <h1 class="youtube-hero-title">Journal Your Thoughts, Track Your Moods</h1>
                <p class="youtube-hero-subtitle">A simple and powerful platform to document your daily experiences and emotional journey</p>
                @if (!SignInManager.IsSignedIn(User))
                {
                    <div class="youtube-hero-buttons">
                        <a asp-controller="Account" asp-action="Register" class="youtube-btn-primary">
                            <i class="fas fa-user-plus"></i> Create Account
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="youtube-btn-secondary">
                            <i class="fas fa-sign-in-alt"></i> Sign In
                        </a>
                    </div>
                }
                else
                {
                    <div class="youtube-hero-buttons">
                        <a asp-controller="Journal" asp-action="Index" class="youtube-btn-primary">
                            <i class="fas fa-book"></i> My Journal
                        </a>
                        <a asp-controller="Mood" asp-action="Index" class="youtube-btn-secondary">
                            <i class="fas fa-heart"></i> Mood Tracker
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Features Section - YouTube Grid Style -->
    <section class="youtube-features-section" id="features">
        <div class="container">
            <h2 class="youtube-section-title">Key Features</h2>
            <div class="youtube-features-grid">
                <div class="youtube-feature-card">
                    <div class="youtube-feature-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <h3>Rich Text Editor</h3>
                    <p>Write with formatting support and markdown capabilities</p>
                </div>
                <div class="youtube-feature-card">
                    <div class="youtube-feature-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h3>Mood Tracking</h3>
                    <p>Record and analyze your emotional patterns over time</p>
                </div>
                <div class="youtube-feature-card">
                    <div class="youtube-feature-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3>Calendar View</h3>
                    <p>Navigate your entries with an intuitive calendar interface</p>
                </div>
                <div class="youtube-feature-card">
                    <div class="youtube-feature-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                    <h3>Smart Tags</h3>
                    <p>Organize and find entries quickly with custom tags</p>
                </div>
                <div class="youtube-feature-card">
                    <div class="youtube-feature-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3>Secure & Private</h3>
                    <p>PIN protection keeps your personal thoughts safe</p>
                </div>
                <div class="youtube-feature-card">
                    <div class="youtube-feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3>Analytics Dashboard</h3>
                    <p>Visualize your journaling habits and mood trends</p>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section - YouTube Style -->
    <section class="youtube-steps-section">
        <div class="container">
            <h2 class="youtube-section-title">Getting Started</h2>
            <div class="youtube-steps-grid">
                <div class="youtube-step-card">
                    <div class="youtube-step-number">1</div>
                    <h3>Create Account</h3>
                    <p>Sign up for free in less than a minute</p>
                </div>
                <div class="youtube-step-card">
                    <div class="youtube-step-number">2</div>
                    <h3>Write Your First Entry</h3>
                    <p>Start documenting your thoughts and experiences</p>
                </div>
                <div class="youtube-step-card">
                    <div class="youtube-step-number">3</div>
                    <h3>Track Your Moods</h3>
                    <p>Monitor your emotional patterns and insights</p>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/landing.js" asp-append-version="true"></script>
</body>
</html>
