@model UsersApp.ViewModels.JournalEntryViewModel
@{
    ViewData["Title"] = "Journal Entry";
}

<div class="journal-view-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3>
                @if (Model.IsProtected)
                {
                    <i class="fas fa-lock"></i>
                }
                <i class="fas fa-journal-whills"></i> Journal Entry
            </h3>
            <div>
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-sm btn-light">
                    <i class="fas fa-edit"></i> Edit
                </a>
                @if (Model.Id.HasValue)
                {
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this entry?')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                }
                <a href="@Url.Action("List")" class="btn btn-sm btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="journal-entry-meta mb-4">
                <div class="d-flex align-items-center gap-3 flex-wrap">
                    <span class="badge bg-info">
                        <i class="fas fa-calendar"></i> @Model.EntryDate.ToString("MMMM dd, yyyy")
                    </span>
                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <div class="journal-tags">
                            @foreach (var tag in Model.TagList)
                            {
                                <span class="badge bg-primary">@tag</span>
                            }
                        </div>
                    }
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h2 class="journal-entry-title mb-4">@Model.Title</h2>
            }
            
            <div class="journal-content">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>

<style>
    .journal-view-container {
        max-width: 900px;
        margin: 0 auto;
    }
    
    .journal-entry-title {
        color: #333;
        font-weight: 600;
        border-bottom: 2px solid #667eea;
        padding-bottom: 10px;
    }
    
    .journal-content {
        line-height: 1.8;
        font-size: 1.1em;
        color: #444;
    }
    
    .journal-content h1, .journal-content h2, .journal-content h3 {
        margin-top: 1.5em;
        margin-bottom: 0.5em;
        color: #333;
    }
    
    .journal-content p {
        margin-bottom: 1em;
    }
    
    .journal-content ul, .journal-content ol {
        margin-bottom: 1em;
        padding-left: 2em;
    }
    
    .journal-content blockquote {
        border-left: 4px solid #667eea;
        padding-left: 1em;
        margin-left: 0;
        color: #666;
        font-style: italic;
    }
    
    .journal-content code {
        background: #f4f4f4;
        padding: 2px 6px;
        border-radius: 3px;
        font-family: 'Courier New', monospace;
    }
    
    .journal-content pre {
        background: #f4f4f4;
        padding: 1em;
        border-radius: 5px;
        overflow-x: auto;
    }
    
    .journal-content img {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        margin: 1em 0;
    }
    
    .journal-content a {
        color: #667eea;
        text-decoration: none;
    }
    
    .journal-content a:hover {
        text-decoration: underline;
    }
</style>
